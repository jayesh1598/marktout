{
  "info": {
    "name": "MarkTout API",
    "_postman_id": "marktout-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/health"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/v1/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\":\"John\",\n  \"email\":\"john@example.com\",\n  \"password\":\"password\"\n}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{baseUrl}}/v1/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\":\"john@example.com\",\n  \"password\":\"password\"\n}"
        }
      }
    },
    {
      "name": "List Products",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/v1/products"
      }
    },
    {
      "name": "Cart - Get",
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "url": "{{baseUrl}}/v1/cart"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}